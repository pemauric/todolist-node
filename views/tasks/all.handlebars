<h1>Todas as Task: </h1>
{{#each tasks}}
<ul class="task-list">
    <li>
        {{#if this.done}}
        <a href="/" class="title-done">{{this.title}}</a>
        {{else}}
        <a href="/" class="title">{{this.title}}</a>
        {{/if}}
        <div class="actions">
            <form action="/updatestatus" method="POST">
                <input type="hidden" name="id" value="{{this.id}}">
                <input type="hidden" name="done" value="{{this.done}}">
                <button type="submit">
                    <i class="bi bi-check"></i>
                </button>
            </form>
            <a href="/edit/{{this.id}}"><i class="bi bi-pencil-square"></i></a>
            <form action="/delete" method="POST">
                <input type="hidden" name="id" value="{{this.id}}">
                <button type="submit">
                    <i class="bi bi-trash3-fill"></i>
                </button>
            </form>
        </div>
    </li>
</ul>
{{/each }}

